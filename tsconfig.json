{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "noImplicitOverride": true,
        "noImplicitThis": true
       
    },
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "_build", "temp/*"]
      },
    "exclude": [
        "./lib/*",
        "**/node_modules",
        "./test/*"
    ]
}