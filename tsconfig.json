{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "rootDir": "src",
        //"allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "types",
        "resolveJsonModule": true
    },
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "_build", "temp/*"]
      },
    "exclude": [
        "./dist/*",
        "**/node_modules",
        "./test/*"
    ]
}